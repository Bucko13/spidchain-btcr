{
  "appName": "btcr-js",
  "appLocation": {
    "local": "../../"
  },
  "meteorSettingsLocation": "./settings.json",
  "meteorSettingsInRepo": false,
  "prebuildScript": "",
  "meteorBuildFlags": "--allow-superuser --architecture os.linux.x86_64",
  "env": {
    "ROOT_URL": "http://xxx.xxx.xxx.xxx",
    "PORT": 80,
    "MONGO_URL": "mongodb://localhost:27017/btcr-js"
  },
  "server": {
    "host": "xxx.xxx.xxx.xxx",
    "username": "root",
    "password": "xxxxxxxxxxxx",
    "deploymentDir": "/opt/",
    "exec_mode": "cluster_mode",
    "instances": 1,
    "nvm": {
      "bin": "~/.nvm/nvm.sh",
      "use": "v4.8.3"
    }
  }
}

